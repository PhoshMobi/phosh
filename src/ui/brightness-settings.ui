<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <template class="PhoshBrightnessSettings" parent="GtkBin">
    <child>
      <object class="GtkBox">
        <property name="visible">1</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="visible">1</property>
            <property name="hexpand">1</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkImage" id="image">
                <property name="visible">1</property>
                <property name="pixel-size">16</property>
              </object>
            </child>
            <child>
              <object class="GtkScale" id="scale">
                <property name="visible">1</property>
                <property name="hexpand">1</property>
                <property name="draw-value">0</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="toggle_btn">
                <property name="visible">1</property>
                <property name="focus-on-click">0</property>
                <style>
                  <class name="phosh-gear-button"/>
                </style>
                <child>
                  <object class="GtkStack" id="toggle_stack">
                    <property name="visible">1</property>
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkImage">
                        <property name="visible">1</property>
                        <property name="icon-name">go-next-symbolic</property>
                      </object>
                      <packing>
                        <property name="name">hide-details</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkImage">
                        <property name="visible">1</property>
                        <property name="icon-name">go-down-symbolic</property>
                      </object>
                      <packing>
                        <property name="name">show-details</property>
                      </packing>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="flat"/>
                  <class name="phosh-settings-details"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkRevealer">
            <property name="visible">1</property>
            <property name="reveal-child" bind-source="toggle_btn" bind-property="active" bind-flags="sync-create"/>
            <child>
              <object class="GtkBox">
                <property name="visible">1</property>
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <style>
                  <class name="phosh-settings-list-box"/>
                </style>
                <child>
                  <object class="GtkListBox">
                    <property name="visible">1</property>
                    <property name="selection-mode">none</property>
                    <child>
                      <object class="HdyActionRow">
                        <property name="visible">1</property>
                        <property name="title" translatable="yes">Automatic Screen Brightness</property>
                        <property name="activatable">1</property>
                        <signal name="activated" handler="on_auto_brightness_activated" swapped="true"/>
                        <child>
                          <object class="GtkSwitch" id="auto_switch">
                            <property name="visible">1</property>
                            <property name="valign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="visible">1</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="visible">1</property>
                    <property name="action-name">panel.launch-panel</property>
                    <property name="action-target">&quot;power&quot;</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="visible">1</property>
                        <property name="ellipsize">end</property>
                        <property name="label" translatable="yes">Brightness Settings</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
